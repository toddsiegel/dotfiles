[init]
	defaultBranch = main
[user]
	name = Todd Siegel
	email = todd@solerasoftware.com\n
[color]
	ui = auto
[color "diff"]
        old = red dim
        new = brightgreen bold
[commit]
        template = ~/.gitmessage
        verbose = true
[core]
        editor = vim
	excludesfile = ~/.gitignore_global
[fetch]
        prune = true
[alias]
	alias = config --get-regexp ^alias\\.
	amend = commit --amend
	autosquash = rebase -i --autosquash
	ap = add --patch
	br = branch
	ci = commit -v
	co = checkout
        fixup = commit --fixup
        nomend = commit --amend --no-edit
        rbi = rebase -i
        rbim = rebase -i main
	remain = !git fetch origin && git rebase origin/main
        review = show main.. --reverse
	slog = log --pretty=oneline --abbrev-commit
        squash = commit --squash
	st = status --short --branch
        staged = diff --cached
        stf = !git status -s | cut -c4- | xargs
        sum = log --pretty=oneline --abbrev-commit --name-status --reverse
        summ = log --pretty=oneline --abbrev-commit --name-status --reverse main..
        todo = !git diff main.. | grep "^+.*TODO"
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    features = side-by-side line-numbers decorations
    syntax-theme = Dracula
    plus-style = syntax "#003800"
    minus-style = syntax "#3f0001"

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-decoration-style = cyan box ul
    hunk-header-line-number-style = "#067a00"

[delta "line-numbers"]
    line-numbers-left-style = cyan
    line-numbers-right-style = cyan
    line-numbers-minus-style = 124
    line-numbers-plus-style = 28

[push]
	default = current
[rebase]
	autosquash = true
